
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "lib/*": ["src/lib/*"],
      "gql/*": ["src/lib/gql/*"],
      "HOCs/*": ["src/lib/HOCs/*"],
      "hooks/*": ["src/lib/hooks/*"],
      "utils/*": ["src/lib/utils/*"],
      "services/*": ["src/lib/services/*"],
      "constants/*": ["src/lib/constants/*"],
      "containers/*": ["src/containers/*"],
      "components/*": ["src/components/*"],
      "static/*": ["static/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": [
    ".next",
    "config",
    "next.config.js",
    "node_modules",
    "**/lib/gql/generated/*",
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./scripts/**/*.ts"
  ]
}
