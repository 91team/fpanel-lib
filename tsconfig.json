
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "lib/*": ["src/lib/*"],
      "gql/*": ["src/lib/gql/*"],
      "HOCs/*": ["src/lib/HOCs/*"],
      "hooks/*": ["src/lib/hooks/*"],
      "utils/*": ["src/lib/utils/*"],
      "services/*": ["src/lib/services/*"],
      "constants/*": ["src/lib/constants/*"],
      "containers/*": ["src/containers/*"],
      "components/*": ["src/components/*"],
      "assets/*": ["assets/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types", "./build/types"]
  },
  "exclude": [
    "node_modules",
    "**/lib/gql/generated/*",
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
