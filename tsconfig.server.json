{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"outDir": "dist",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"isolatedModules": false,
		"noEmit": false,
		"skipLibCheck": true,
		"baseUrl": ".",
		"preserveConstEnums": true,
		"typeRoots": ["./types", "./node_modules/@types"],
		"lib": ["es2017"]
	},
	"include": ["server/**/*.ts"],
	"exclude": ["lib/**/*.*"]
}
